extends ../../layouts/default.pug 
include ../../mixins/alert.pug 

block main 
    +alert-success(2000)
    +alert-error(2000)
    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Nhập mã OTP
                form(
                    action="/user/password/otp"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email 
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            value = email
                            readonly
                        )
                    div(class="form-group")
                        label(for="otp") OTP 
                        input(
                            type="otp"
                            class="form-control"
                            id="otp"
                            name="otp"
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-success btn-block"
                        ) Xác nhận