extends ../../layouts/default.pug 
include ../../mixins/box-head.pug 

block main 
    .container.my-3 
        .row
            .col-12 
                +box-head("Phòng chat")
        .row.mb-3 
            .col-12
                a(
                    href = "/rooms-chat/create"
                    class = "btn-create"
                ) Tạo phòng
        .row 
            .col-6
                each room in rooms
                    div(class = "box-room")
                        div(class = "inner-avatar")
                            img(
                                src = "https://robohash.org/hicveldicta.png"
                                alt = "1Huy"
                            )
                        div(class = "inner-info")
                            div(class = "inner-name") #{room.title}
                            div(class = "inner-button")
                                a(
                                    href = `/chat/${room.id}`
                                    class = "btn btn-sm btn-primary mr-1 btn-message"
                                ) Nhắn tin