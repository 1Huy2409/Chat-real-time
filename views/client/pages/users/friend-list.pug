extends ../../layouts/default.pug 
include ../../mixins/box-head.pug 

block main 
    .container.my-3 
        include ../../partials/list-button.pug 
        .row
            .col-12 
                +box-head("Danh sách bạn bè")
        .row    
            each user in users
                .col-6(user-id = user.id)
                    div(class = "box-user")
                        div(class = "inner-avatar")
                            img(
                                src = (user.avatar ? user.avatar : "https://i.pinimg.com/736x/8f/1c/a2/8f1ca2029e2efceebd22fa05cca423d7.jpg")
                                alt = user.fullName
                            )
                        div(class = "inner-info")
                            div(class = "inner-name") #{user.fullName}
                            span(
                                class = "inner-status"
                                status-online = user.statusOnline
                            )
                                <i class="fa fa-circle" aria-hidden="true"></i>
                            div(class = "inner-buttons") 
                                a(
                                    href = `/chat/${user.infoRoomChat}`
                                    class = "btn btn-sm bn-primary mr-1"
                                ) Nhắn tin
block script 
    <script type = "module" src="/js/users.js"></script>  